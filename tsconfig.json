{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"outDir": "./dist/",
		"preserveConstEnums": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"rootDir": "./src/",
		"sourceMap": false,
		"target": "es2017"
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
